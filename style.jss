body {
  font-family: Arial, sans-serif;
  max-width: 700px;
  margin: auto;
  padding: 20px;
  background-color: #f5f5f5;
  color: #333;
}

header, footer {
  text-align: center;
  background-color: #e0e0e0;
  padding: 15px;
  border-radius: 8px;
}

button {
  padding: 10px 20px;
  background-color: #007acc;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.hidden {
  display: none;
}
